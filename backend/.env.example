# Server Configuration
PORT=5000

# Frontend URL (for password reset links and redirects)
FRONTEND_URL=http://localhost:8080

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:8080,http://localhost:3000,https://your-frontend-domain.com

# Database Configuration (MySQL)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_database_password
DB_NAME=skill_invest
DB_PORT=3306

# JWT Secret Key (Generate a secure random string)
JWT_SECRET=your_secure_jwt_secret_key_here

# Encryption Key for Messages (32-byte hex string)
ENCRYPTION_KEY=your_32_byte_hex_encryption_key_here

# AWS S3 Configuration (for file uploads)
AWS_REGION=eu-north-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
S3_BUCKET=your_s3_bucket_name

# Google Gemini AI API Key
GEMINI_API_KEY=your_gemini_api_key_here

# SMTP Configuration (for email sending)
SMTP_USER=your_smtp_email@gmail.com
SMTP_PASS=your_smtp_password_or_app_password
